@inherits LayoutComponentBase
@inject I18nText I18nText

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">@_T.About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer>
            <RuntimeInfoBadge />
            <LanguageSelector />
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private LayoutText _T = new();

    protected override async Task OnInitializedAsync()
    {
        _T = await I18nText.GetTextTableAsync<LayoutText>(this);
    }
}